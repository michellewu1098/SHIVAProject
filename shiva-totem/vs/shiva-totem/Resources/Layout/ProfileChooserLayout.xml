	<LinearLayout
		layout_width="fill_parent"
		layout_height="fill_parent"
		layout_weight="0.08"
		orientation="horizontal">
		
		<View
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.1"
			/>
			
		<TextView
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.5"
			text="Available Profiles:"
			/>
			
		<View
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.4"
			/>
			
		</LinearLayout>
		
		
		
	
	<LinearLayout
		layout_width="fill_parent"
		layout_height="fill_parent"
		layout_weight="0.3"
		orientation="horizontal">
		
		<View
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.1"
			/>
				
		<ScrollContainer
			layout_weight="0.8"
			layout_width="fill_parent"
			layout_height="fill_parent"
			scroll_vertical="true"
			scroll_horizontal="true"
			>
			<ListView
				layout_width="wrap_content"
				layout_height="wrap_content"
				id="ProfilesList"/>
		
			</ScrollContainer>
		
		<View
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.1"
			/>
			
		</LinearLayout>
		
		
		
		
	<LinearLayout
		layout_width="fill_parent"
		layout_height="fill_parent"
		layout_weight="0.2"
		orientation="horizontal">
		
		<View
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.1"
			/>
			
		<TextView
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.3"
			text="Profile Directory: "
			/>
			
		<TextView
			id="CurrentProfileDirectory"
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.3"
			text="- none -"
			/>
			
		<TextButton
			layout_width="wrap_content"
			layout_height="wrap_content"
			layout_weight="0.3"
			onClick="BrowseProfileDirectoryHandler"
			text="Browse..."
			/>
			
		</LinearLayout>
		
		
		
		
		
		
	<LinearLayout
		layout_width="fill_parent"
		layout_height="fill_parent"
		layout_weight="0.2"
		orientation="horizontal">
		
		<View
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.35"
			/>
			
		<TextButton
			layout_width="wrap_content"
			layout_height="wrap_content"
			layout_weight="0.3"
			onClick="StartActivityHandler"
			text="Start"
			/>
			
		<View
			layout_width="fill_parent"
			layout_height="fill_parent"
			layout_weight="0.35"
			/>
			
		</LinearLayout>
	
	

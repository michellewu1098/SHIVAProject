	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.08"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		<TextView
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1"
			text = "Available Profiles:" />
			
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
	</LinearLayout>
			
	
	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.5"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
				
		<ScrollContainer
			layout_weight = "0.9"
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			scroll_vertical = "true"
			scroll_horizontal = "true" >
			
			<ListView
				layout_width = "wrap_content"
				layout_height = "wrap_content"
				id = "ProfilesList" />
		
		</ScrollContainer>
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
	</LinearLayout>
		
		
	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.1"
		orientation = "horizontal">
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		<TextView
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1"
			text = "Profile Directory: " />
			
		<TextView
			id = "CurrentProfileDirectory"
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1"
			text = "- none -" />
			
		<TextButton
			id = "Browse"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.1"
			onClick = "BrowseProfileDirectoryHandler"
			text = "Browse..." />
			
	</LinearLayout>
		
		
	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.2"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		<TextButton
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.2"
			onClick = "StartActivityHandler"
			text = "Start" />
			
		<TextButton	
			id = "NewProfileActivity"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.2"
			onClick = "NewProfileHandler"
			text = "New" />
			
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
	</LinearLayout>
	
</LinearLayout>

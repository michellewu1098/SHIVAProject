<?xml version="1.0" encoding="utf-8"?>
<CustomLayout
	layout_width="fill_parent"
	layout_height="fill_parent"
	background="@RootViewBackground">
	
	<TextView
		id="Title"
		layout_width="wrap_content"
		layout_height="wrap_content"
		layout_centreX="0.5"
		layout_centreY="0.05"
		text="tools"
		/>

	<TextButton
		id="EyeGazeRest"
		layout_width="0.2"
		layout_height="0.3"
		layout_centreX="0.7"
		layout_centreY="0.25"
		eyeGaze_RestButton="true"
		text="rest"
		/>

	<TextButton
		id="DrillActivity"
		layout_width="0.3"
		layout_height="0.2"
		layout_centreX="0.2"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="launchActivityHandler"
		text="drill"
		/>

  <TextButton
		id="BlendAdjustActivity"
		layout_width="0.3"
		layout_height="0.2"
		layout_centreX="0.2"
		layout_centreY="0.7"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="launchActivityHandler"
		text="pump"
		/>

  
  <TextButton
		id="RotateObjectActivity"
		layout_width="0.3"
		layout_height="0.2"
		layout_centreX="0.5"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="launchActivityHandler"
		text="rotate"
		/>
  
  <TextButton
		id="UniformScaleActivity"
		layout_width="0.3"
		layout_height="0.2"
		layout_centreX="0.5"
		layout_centreY="0.7"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="launchActivityHandler"
		text="object size"
		/>

  <TextButton
		id="NudgeActivity"
		layout_width="0.3"
		layout_height="0.2"
		layout_centreX="0.5"
		layout_centreY="0.9"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="launchActivityHandler"
		text="nudge objects"
		/>




  <TextButton
		id="RotateReset"
		layout_width="0.2"
		layout_height="0.1"
		layout_centreX="0.8"
		layout_centreY="0.9"
		onClick="buttonHandler"
		text="reset view"
		/>

  
	<TextButton
		id="UndoButton"
		layout_width="0.2"
		layout_height="0.1"
		layout_centreX="0.9"
		layout_centreY="0.25"
		onClick="buttonHandler"
		text="undo"
    
		/>
  
	<TextButton
		id="BackButton"
		layout_width="0.2"
		layout_height="0.1"
		layout_centreX="0.9"
		layout_centreY="0.35"
		onClick="buttonHandler"
		text="back"
    
		/>


</CustomLayout>

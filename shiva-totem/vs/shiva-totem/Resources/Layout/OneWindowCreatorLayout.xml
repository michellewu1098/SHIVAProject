<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout 
	layout_width = "fill_parent"
	layout_height = "fill_parent"
	orientation = "vertical"
	background = "System/Theme02/background.xml" >
	
	<TextView
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.1"
		text = "Create new profile"
		text_alignment = "right" />
		
	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.2"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		<TextView 
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.4"
			text = "Number of windows: " />
			
		<TextView
			id = "OneWindowProfile"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.1"
			onClick = "OneWindowHandler"
			text = "1" />
		
		<!--<TextButton 
			id = "TwoWindowsProfile"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.1"
			onClick = "TwoWindowsHandler"
			text = "2" />-->
			
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.2" />
		
		</LinearLayout>

	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.2"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		<TextView
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.6"
			text = "Window dimensions :&#10;(width x height)" />
		
		<TextButton
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.15"
			onClick = "NumberOfWindowsHandler"
			text = "1" />
		
		<TextButton 
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.15"
			onClick = "NumberOfWindowsHandler"
			text = "2" />
			
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		</LinearLayout>
		
	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.2"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		<TextView
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.4"
			text = "Theme" />
		
		<TextButton
			id = "StandardTheme"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.15"
			onClick = "StandardThemeHandler"
			text = "Standard" />
			
		<TextButton
			id = "HighVisTheme"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.15"
			onClick = "HighVisThemeHandler"
			text = "HighVis" />
		
		<TextButton 
			id = "EyeGazeTheme"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.15"
			onClick = "EyeGazeThemeHandler"
			text = "EyeGaze" />
		
		<TextButton 
			id = "BrowseTheme"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.15"
			onClick = "BrowseThemeHandler"
			text = "Browse.." />
			
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />-->
			
		</LinearLayout>
		
	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.2"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		<TextView
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.6"
			text = "Background colour" />
		
		<ColourSelector
			id = "ColourSelector"
			layout_weight = "0.2"
			onColourChange = "colourChangeHandler" />
			
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.1" />
			
		</LinearLayout>
	
	<LinearLayout
		layout_width = "fill_parent"
		layout_height = "fill_parent"
		layout_weight = "0.2"
		orientation = "horizontal" >
		
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.4" />
		
		<TextButton
			id = "SaveProfile"
			layout_width = "wrap_content"
			layout_height = "wrap_content"
			layout_weight = "0.2"
			onClick = "SaveProfileHandler"
			text = "Save Profile" />
			
		<View
			layout_width = "fill_parent"
			layout_height = "fill_parent"
			layout_weight = "0.4" />
			
		</LinearLayout>

	
	</LinearLayout>
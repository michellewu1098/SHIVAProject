<?xml version="1.0" encoding="utf-8"?>
<CustomLayout
	layout_width="fill_parent"
	layout_height="fill_parent"
	background="@RootViewBackground">
		
	<TextView
		id="titleTextView"
		layout_width="wrap_content"
		layout_height="wrap_content"
		layout_centreX="0.5"
		layout_centreY="0.05"
		text="DRILL operation"
		/>
		
	<VolView
		id="MainVolView"
		layout_width="0.34"
		layout_height="0.55"
		layout_centreX="0.5"
		layout_centreY="0.55"
		cameraPositionY="1"
		cameraPositionZ="14.0"
		cameraTargetY="0"
		/>


	<TextButton
		id="EyeGazeRest"
		layout_width="0.2"
		layout_height="0.3"
		layout_centreX="0.7"
		layout_centreY="0.25"
		eyeGaze_RestButton="true"
		text="rest"
		/>

	<ImageButton
		id="DrillSizeIncrease"
		layout_width="0.1"
		layout_height="0.2"
		layout_centreX="0.07"
		layout_centreY="0.25"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Up.xml"
		/>

	<ImageButton
		id="DrillSizeDecrease"
		layout_width="0.1"
		layout_height="0.2"
		layout_centreX="0.07"
		layout_centreY="0.75"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Down.xml"
		/>

	<TextButton
		id="DrillSizeReset"
		layout_width="0.11"
		layout_height="0.2"
		layout_centreX="0.07"
		layout_centreY="0.5"
		height_constrained="true"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		text="reset&#10;drill size"
		/>

	<ImageButton
		id="CrosshairLeft"
		layout_width="0.1"
		layout_height="0.2"
		layout_centreX="0.18"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Left.xml"
		eyeGaze_Repeat="true"
		/>

	<ImageButton
		id="CrosshairRight"
		layout_width="0.1"
		layout_height="0.2"
		layout_centreX="0.82"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Right.xml"
		eyeGaze_Repeat="true"
		/>

  
	<ImageButton
		id="CrosshairUp"
		layout_width="0.1"
		layout_height="0.2"
		layout_centreX="0.3"
		layout_centreY="0.25"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Up.xml"
		eyeGaze_Repeat="true"
		/>

	<ImageButton
		id="CrosshairDown"
		layout_width="0.1"
		layout_height="0.2"
		layout_centreX="0.3"
		layout_centreY="0.75"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Down.xml"
		eyeGaze_Repeat="true"
		/>


	<ImageButton
		id="RotateUp"
		layout_width="0.12"
		layout_height="0.2"
		layout_centreX="0.7"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Up.xml"
		eyeGaze_Repeat="true"
		/>
		
	<ImageButton
		id="RotateDown"
		layout_width="0.12"
		layout_height="0.2"
		layout_centreX="0.3"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Down.xml"
		eyeGaze_Repeat="true"
		/>

	<ImageButton
		id="RotateRight"
		layout_width="0.2"
		layout_height="0.12"
		layout_centreX="0.5"
		layout_centreY="0.9"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Right.xml"
		eyeGaze_Repeat="true"
    	/>

	<ImageButton
		id="RotateLeft"
		layout_width="0.2"
		layout_height="0.12"
		layout_centreX="0.5"
		layout_centreY="0.2"
		scaleContent="true"
		keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Left.xml"
		eyeGaze_Repeat="true"
		/>


	<TextButton
		id="RotateReset"
		layout_width="0.2"
		layout_height="0.1"
		layout_centreX="0.7"
		layout_centreY="0.9"
		onClick="buttonHandler"
		text="reset view"
		/>

	<TextButton
		id="PerformDrill"
		layout_width="0.2"
		layout_height="0.1"
		layout_centreX="0.9"
		layout_centreY="0.15"
		onClick="buttonHandler"
		text="drill!"
		/>
  
	<TextButton
		id="UndoButton"
		layout_width="0.2"
		layout_height="0.1"
		layout_centreX="0.9"
		layout_centreY="0.25"
		onClick="buttonHandler"
		text="undo"
		/>
  
	<TextButton
		id="BackButton"
		layout_width="0.2"
		layout_height="0.1"
		layout_centreX="0.9"
		layout_centreY="0.35"
		onClick="buttonHandler"
		text="back"
		/>


</CustomLayout>

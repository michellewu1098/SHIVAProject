<?xml version="1.0" encoding="utf-8"?>
<CustomLayout
	layout_width="fill_parent"
	layout_height="fill_parent"
	background="@RootViewBackground">
	
	<ScrollContainer
		layout_width="0.2"
		layout_height="1.0"
		layout_centreX="0.1"
		layout_centreY="0.5"
		scroll_vertical="true"
		scroll_horizontal="true"
		>
        <LayoutAdapterView
          id="PrimitiveList"
          layout_width="wrap_content"
          layout_height="wrap_content"
          first_focus="true"
          next_focus_right="RotateDown"
				    >
          <LinearLayout 
		        layout_width="wrap_content"
		        layout_height="wrap_content"
		        orientation="vertical"
            />
        </LayoutAdapterView>
		
		</ScrollContainer>
	
	
	<TextView
		id="titleTextView"
		layout_width="wrap_content"
		layout_height="wrap_content"
		layout_centreX="0.5"
		layout_centreY="0.05"
		text="SHIVA totem demo"
		/>
		
	<VolView
		id="MainVolView"
		layout_width="0.34"
		layout_height="0.55"
		layout_centreX="0.5"
		layout_centreY="0.55"
		cameraPositionY="1"
		cameraPositionZ="14.0"
		cameraTargetY="0"
		/>


	<ImageTextButton
		id="RotateUp"
		layout_width="0.16"
		layout_height="0.23"
		layout_centreX="0.7"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		text="Rotate&#10;Up"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Up.xml"
		eyeGaze_Repeat="true"
    
		scan_prev="RotateLeft"
    
		next_focus_left="RotateDown"
		next_focus_right="NudgeUp"
		next_focus_up="RotateLeft"
		next_focus_down="RotateRight"
		/>
		
	<ImageTextButton
		id="RotateDown"
		layout_width="0.16"
		layout_height="0.23"
		layout_centreX="0.3"
		layout_centreY="0.5"
		scaleContent="true"
		keepContentAspectRatio="true"
		text = "Rotate&#10;Down"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Down.xml"
		eyeGaze_Repeat="true"
    
		scan_prev="RotateRight"
    
		next_focus_left="PrimitiveList"
		next_focus_up="RotateLeft"
		next_focus_down="RotateRight"
		next_focus_right="RotateUp"
		/>

	<ImageTextButton
		id="RotateRight"
		layout_width="0.2"
		layout_height="0.16"
		layout_centreX="0.5"
		layout_centreY="0.91"
		scaleContent="true"
		keepContentAspectRatio="true"
		text = "Rotate Right"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Right.xml"
		eyeGaze_Repeat="true"
    
		next_focus_up="RotateLeft"
		next_focus_left="RotateDown"
		next_focus_right="RotateUp"
		/>

  <ImageTextButton
		id="RotateLeft"
		layout_width="0.2"
		layout_height="0.16"
		layout_centreX="0.5"
		layout_centreY="0.2"
		scaleContent="true"
		keepContentAspectRatio="true"
		text = "Rotate Left"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Left.xml"
		eyeGaze_Repeat="true"
    
		scan_prev="PrimitiveList"
        first_scan="true"
    
    
		next_focus_left="RotateDown"
		next_focus_right="RotateUp"
		/>


  <TextButton
		id="RotateReset"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.7"
		layout_centreY="0.9"
		onClick="buttonHandler"
		text="reset view"
		/>

  <TextButton
		id="NudgeActivity"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.3"
		layout_centreY="0.9"
		onClick="launchActivityHandler"
		text="nudge"
		/>

  <TextButton
		id="EyeGazeRest"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.7"
		layout_centreY="0.15"
		eyeGaze_RestButton="true"
		text="rest"
		/>

  <TextButton
		id="New"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.3"
		layout_centreY="0.15"
		onClick="buttonHandler"
		text="new"
		/>

  <TextButton
		id="NudgeUp"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.05"
		onClick="buttonHandler"
		text="nudge up"
    
    scan_prev="RotateDown"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>

  <TextButton
		id="SwapAbove"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.15"
		onClick="buttonHandler"
		text="swap next"
    
    scan_prev="NudgeUp"
		next_focus_up="NudgeUp"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>

  <TextButton
		id="SelectAbove"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.25"
		onClick="buttonHandler"
		text="select next"
    
    scan_prev="SwapAbove"
		next_focus_up="SwapAbove"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>
  
	<TextButton
		id="DeleteSelected"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.35"
		onClick="buttonHandler"
		text="delete"
    
    scan_prev="SelectAbove"
		next_focus_up="SelectAbove"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>
  
	<TextButton
		id="EditMenuActivity"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.45"
		onClick="launchActivityHandler"
		text="edit"
    
    scan_prev="DeleteSelected"
		next_focus_up="DeleteSelected"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>

  <TextButton
		id="SelectBelow"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.55"
		onClick="buttonHandler"
		text="select previous"
    
    scan_prev="EditSelected"
		next_focus_up="EditSelected"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>

  <TextButton
		id="SwapBelow"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.65"
		onClick="buttonHandler"
		text="swap previous"
    
    scan_prev="SelectBelow"
		next_focus_up="SelectBelow"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>

  <TextButton
		id="NudgeDown"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.75"
		onClick="buttonHandler"
		text="nudge down"
    
    scan_prev="SwapBelow"
		next_focus_up="SwapBelow"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>


  <TextView
		id="saveConfirmationText"
		layout_width="wrap_content"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.90"
		text="saved!"
    visibility="false"
		/>

  <TextButton
		id="Save"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.95"
		onClick="saveHandler"
		text="save"
    
    scan_prev="NudgeDown"
    scan_next="PrimitiveList"
		next_focus_up="NudgeDown"
		next_focus_down="NudgeUp"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>
		
	<TextButton
		id="Load"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.85"
		onClick="loadHandler"
		text="load"
    
    scan_prev="Save"
		next_focus_up="Save"
		next_focus_right="PrimitiveList"
		next_focus_left="RotateUp"
		/>
		
</CustomLayout>

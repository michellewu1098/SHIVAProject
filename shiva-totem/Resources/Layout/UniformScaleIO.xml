<?xml version="1.0" encoding="utf-8"?>
<CustomLayout
	layout_width="fill_parent"
	layout_height="fill_parent"
  background="LinearGradientBackground.xml">
	
	
	
	<TextView
		id="titleTextView"
		layout_width="wrap_content"
		layout_height="wrap_content"
		layout_centreX="0.5"
		layout_centreY="0.05"
		text="make bigger or smaller"
		/>
		
	<VolView
		id="MainVolView"
		layout_width="0.34"
		layout_height="0.55"
		layout_centreX="0.5"
		layout_centreY="0.55"
		cameraPositionY="1"
		cameraPositionZ="14.0"
		cameraTargetY="0"
		/>



  <TextButton
		id="ScaleXUp"
		layout_width="0.1"
		layout_height="wrap_content"
		layout_centreX="0.05"
		layout_centreY="0.05"
		onClick="buttonHandler"
		text="Xup"
		/>

  <TextButton
		id="ScaleXDown"
		layout_width="0.1"
		layout_height="wrap_content"
		layout_centreX="0.15"
		layout_centreY="0.05"
		onClick="buttonHandler"
		text="Xdn"
		/>

  
  <TextButton
		id="ScaleYUp"
		layout_width="0.1"
		layout_height="wrap_content"
		layout_centreX="0.05"
		layout_centreY="0.12"
		onClick="buttonHandler"
		text="Yup"
		/>

  <TextButton
		id="ScaleYDown"
		layout_width="0.1"
		layout_height="wrap_content"
		layout_centreX="0.15"
		layout_centreY="0.12"
		onClick="buttonHandler"
		text="Ydn"
		/>

  <TextButton
		id="ScaleZUp"
		layout_width="0.1"
		layout_height="wrap_content"
		layout_centreX="0.05"
		layout_centreY="0.19"
		onClick="buttonHandler"
		text="Zup"
		/>

  <TextButton
		id="ScaleZDown"
		layout_width="0.1"
		layout_height="wrap_content"
		layout_centreX="0.15"
		layout_centreY="0.19"
		onClick="buttonHandler"
		text="Zdn"
		/>






  <ImageButton
		id="ScaleUp"
		layout_width="0.12"
		layout_height="0.2"
		layout_centreX="0.1"
		layout_centreY="0.35"
    scaleContent="true"
    keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Up.xml"
		/>

  <ImageButton
		id="ScaleDown"
		layout_width="0.12"
		layout_height="0.2"
		layout_centreX="0.1"
		layout_centreY="0.85"
    scaleContent="true"
    keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/Arrow_Down.xml"
		/>

  <TextButton
		id="ScaleReset"
		layout_width="0.2"
		layout_height="0.2"
		layout_centreX="0.1"
		layout_centreY="0.6"
    scaleContent="true"
    keepContentAspectRatio="true"
		onClick="buttonHandler"
    text="reset"
		/>




  <ImageButton
		id="RotateUp"
		layout_width="0.12"
		layout_height="0.2"
		layout_centreX="0.7"
		layout_centreY="0.5"
    scaleContent="true"
    keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Up.xml"
    eyeGaze_Repeat="true"
    
		/>
		
	<ImageButton
		id="RotateDown"
		layout_width="0.12"
		layout_height="0.2"
		layout_centreX="0.3"
		layout_centreY="0.5"
    scaleContent="true"
    keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Down.xml"
    eyeGaze_Repeat="true"
    
		/>

	<ImageButton
		id="RotateRight"
		layout_width="0.2"
		layout_height="0.12"
		layout_centreX="0.5"
		layout_centreY="0.9"
    scaleContent="true"
    keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Right.xml"
    eyeGaze_Repeat="true"
    
		/>

  <ImageButton
		id="RotateLeft"
		layout_width="0.2"
		layout_height="0.12"
		layout_centreX="0.5"
		layout_centreY="0.2"
    scaleContent="true"
    keepContentAspectRatio="true"
		onClick="buttonHandler"
		src="System/CommandSymbols/RotateArrow_Left.xml"
    eyeGaze_Repeat="true"
    
		/>


  <TextButton
		id="RotateReset"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.7"
		layout_centreY="0.9"
		onClick="buttonHandler"
		text="reset rotation"
		/>


  <TextButton
		id="EyeGazeRest"
		layout_width="0.2"
		layout_height="0.3"
		layout_centreX="0.7"
		layout_centreY="0.25"
    eyeGaze_RestButton="true"
		text="rest"
		/>





  <TextButton
		id="SelectAbove"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.25"
		onClick="buttonHandler"
		text="select next"
		/>


  <TextButton
		id="SelectBelow"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.55"
		onClick="buttonHandler"
		text="select previous"
		/>


  <TextButton
		id="BackButton"
		layout_width="0.2"
		layout_height="wrap_content"
		layout_centreX="0.9"
		layout_centreY="0.35"
		onClick="buttonHandler"
		text="back"
    
		/>


</CustomLayout>

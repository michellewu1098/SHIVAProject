#ifndef SDF_CORE_TRIANGLE_TRIANGLE_OVERLAP_INCLUDED
#define SDF_CORE_TRIANGLE_TRIANGLE_OVERLAP_INCLUDED

#include <sdf/core/types.hpp>

namespace sdf
{
	//----------------------------------------------------------------------------------------------------------------------
	/// @brief An exact triangle to triangle overlap - if an intersection occurs
	/// @param[in] v0 First triangle first vertex
	/// @param[in] v1 First triangle second vertex
	/// @param[in] v2 First triangle third vertex
	/// @param[in] u0 Second triangle first vertex
	/// @param[in] u1 Second triangle second vertex
	/// @param[in] u2 Second triangle third vertex
	/// @return True if one triangle intersects the other
	//----------------------------------------------------------------------------------------------------------------------
	bool triangle_triangle_overlap(
		const point3d& v0, const point3d& v1, const point3d& v2,
		const point3d& u0, const point3d& u1, const point3d& u2);
}

#endif /* SDF_CORE_TRIANGLE_TRIANGLE_OVERLAP_INCLUDED */